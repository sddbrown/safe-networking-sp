###  SFN-DNS-EVENT
############################
GET sfn-dns-event
GET sfn-dns-event/_search
GET _search
{
  "query":{
    "bool": {
      "must": [
        {"match": {"threat_category": "dns"}},
        {"match": {"processed":"17"}}
     ]
    }
  },
  "sort": [
    {
      "received_at": {
        "order": "desc"
      }
    }
  ]
}

GET sfn-dns-event/_search
{
  "query": {
    "bool": {
      "must": [
        {
          "match": {
            "threat_category": "wildfire"
          }
        },
        {
          "match": {
            "processed": "0"
          }
        }
      ]
    }
  },
  "sort": [
    {
      "@timestamp": {
        "order": "desc"
      }
    }
  ]
}

############################
### END SFN-DNS-EVENT ###



